<mvc:View
	controllerName="qldh.firstTest.Sample2"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true">
    <App id="app">
        <Page class="sapUiMediumMargin"  showHeader="false">
            <content>
                <Wizard id="CreateProductWizard" class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
								complete="wizardCompletedHandler">
                    <WizardStep id="step1" title="Create Request" validated="false">
                        <core:Fragment
								fragmentName="qldh.firstTest.fragments.step1" type="XML" />
					</WizardStep>
					<WizardStep id="step2" title="Create Test" validated="false">
                        <core:Fragment
								fragmentName="qldh.firstTest.fragments.step2" type="XML" />
					</WizardStep>
					<WizardStep id="step3" title="Evaluate results" validated="false">
                        <core:Fragment
								fragmentName="qldh.firstTest.fragments.step3" type="XML" />
                    </WizardStep>
                </Wizard>
            </content>
        </Page>
    </App>
</mvc:View>