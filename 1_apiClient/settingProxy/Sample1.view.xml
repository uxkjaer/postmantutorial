<mvc:View
	controllerName="qldh.settingProxy.Sample1"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true">
	<App id="app">
		<Page class="sapUiMediumMargin" showHeader="false">
			<content>
				<VBox>
				<Text text="1. Open up Postman and click File --> Settings" class="sapUiTinyMarginBottom" />	
				<Image src="./assets/proxy.PNG" class="sapUiTinyMarginBottom"/>
				<Text text="2. Select the Proxy tab and Tick the Add a Custom Proxy Configuration" class="sapUiTinyMarginBottom" />	
				<Text text="3. Set the proxy server to proxy.health.qld.gov.au and port 8080" class="sapUiTinyMarginBottom" />	
				<Text text="4. Enable the proxy Auth and add your windows username and password" class="sapUiTinyMarginBottom" />	
				<Text text="5. Add the Proxy Bypass for localhost" class="sapUiTinyMarginBottom" />	
				<Image src="./assets/proxySetting.PNG" class="sapUiTinyMarginBottom"/>
				
				<Button text="Validate Result" press="onValidate" class="sapUiLargeMarginBottom" />
				<MessageStrip text="Success" showIcon="true" type="Success" visible="false" id="success" class="msgStrip" />
				<MessageStrip text="Fail, try again" showIcon="true" type="Error" visible="false" id="failure" class="msgStrip" />
				</VBox>
			</content>
		</Page>
	</App>
</mvc:View>
